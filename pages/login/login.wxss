.loginButton{
  width: 15%;
  height: 35px;
  top: 30%;
  left: 75%;
  text-align: right;
  line-height: 35px;
  background: rgba(99, 99, 105, 0);
  font-size: 25px;
  color: black;
  position: fixed;
  z-index: 2;
}
.loginButton::after{
    border: none;
}

.container{
  display: flex;
  width: 80%;
  height: 35px;
  top: 30%;
  left: 10%;
  line-height: 35px;
  align-items: center;
  flex-direction: column;
  background: white;
  font-size: 20px;
  color: black;
  position: fixed;
  border: 1px solid white;
  border-radius: 100rpx;
  z-index: 1;
}