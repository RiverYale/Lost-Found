/* pages/login/login.wxss */
.backgroundImgae{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: fixed;
}

.loginButton{
  width: 15%;
  height: 100rpx;
  bottom: 70rpx;
  left: 75%;
  text-align: right;
  line-height: 100rpx;
  background: rgba(99, 99, 105, 0);
  font-size: 60rpx;
  color: rgb(255, 255, 255);
  position: fixed;
  z-index: 2;
}
.loginButton::after{
    border: none;
}

.container{
  display: flex;
  width: 80%;
  height: 100rpx;
  bottom: 70rpx;
  left: 10%;
  line-height: 100rpx;
  align-items: center;
  flex-direction: column;
  background: rgba(99, 99, 105, 0);
  font-size: 50rpx;
  color: rgb(255, 255, 255);
  position: fixed;
  border: 4rpx solid white;
  border-radius: 100rpx;
  z-index: 1;
}