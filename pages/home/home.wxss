/* pages/home/home.wxss */
.userinfo-container{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.userinfo-avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-top: 5px;
}

.num-container{
  display: flex;
  justify-content: center;
  margin-top: 10px;
  flex-direction: row;
  align-items: center;
}

.num-item{
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 15px;
  width: 50%;
}

.num-text{
  color:gray
}

.num-num{
  font-size: 25px;
}

.line-ver{
    background: #cac8c8;
    width: 1px;
    height: 40px;
}

.line-hor{
    background: #cac8c8;
    width: 100%;
    height: 1px;
}

.option-container{
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 18px;
}

.icon{
  width: 25px;
  height: 25px;
  padding: 15px;
}