/* pages/myAdd/myAdd.wxss */
.title {
    display: flex;
    align-items: center;
    background-color: rgb(245, 245, 245);
    width: 100%;
    height: 35px;
    color: rgb(175, 166, 165);
    font-size: 12px;
    padding-left: 15px;
}

.line-hor{
    background: #cac8c8;
    width: 100%;
    height: 1px;
}

.item-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60px;
    width: 100%;
}

.info-container{
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 20px;
    line-height: 1.5;
}

.info-type{
    font-size: 18px;
}

.info-time{
    color: rgb(175, 166, 165);
    font-size: 13px;
}

.cancelBtn{
    width: 45px;
    height: 25px;
    line-height: 25px;
    margin: 15px;
    padding: 0px;
    font-size: 12px;
}